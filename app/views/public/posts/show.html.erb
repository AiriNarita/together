<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <div class="card mb-3">
        <div class="card-header">
          <h2>投稿詳細</h2>
        </div>
        <div class="card-body">
          <h4 class="card-title mb-3"><%= @post.title %></h4>
          <p class="card-text mb-3"><%= @post.body %></p>
          <div class="d-flex flex-wrap mb-3">
            <% @post.hashtags.each do |hashtag| %>
              <span ><%= link_to hashtag.hashtag_name, hashtag_path(params[:id]) %></span>
            <% end %>
          </div>
          <p class="card-text">投稿者：<%= link_to @post.user.full_name, my_page_users_path(@post.user.id) %></p>
          <hr>
          <div class="d-flex justify-content-between align-items-center">
            <% if user_signed_in? %>
              <% if @post.favorited_by?(current_user) %>
                <%= link_to post_favorite_path(@post), method: :DELETE, remote: true do %>
                  <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                  <%= @post.favorites.count %>like
                <% end %>
              <% else %>
                <%= link_to post_favorite_path(@post), method: :POST, remote: true do %>
                  <i class="fa fa-heart" aria-hidden="true" ></i>
                  <%= @post.favorites.count %>like
                <% end %>
              <% end %>
              <%= form_with model: @post_comment, url: post_post_comments_path(@post, @post_comment), local: true, class: 'mb-3' do |f| %>
                <%= f.text_area :comment, rows: '3', class: 'form-control', placeholder: "コメントをここに" %>
                <%= f.submit "送信する", class: 'btn btn-primary btn-sm mt-3' %>
              <% end %>
            <% else %>
              <%= @post.favorites.count %>like
              <p>いいねやコメントをするには、<%= link_to 'ログイン', new_user_session_path %>してください。</p>
            <% end %>
          </div>
          <% if user_signed_in? %>
            <%= form_with model: @post_comment, url: post_post_comments_path(@post, @post_comment), local: true, class: 'mb-3' do |f| %>
              <%= f.text_area :comment, rows: '3', class: 'form-control', placeholder: "コメントをここに" %>
              <%= f.submit "送信する", class: 'btn btn-primary btn-sm mt-3' %>
            <% end %>
            <% if user_signed_in? %>
              <% if @post.user_id == current_user.id %>
                <div class="d-flex justify-content-end">
                  <%= link_to "編集", edit_post_path(@post), class: 'btn btn-success btn-sm mr-2' %>
                  <%= link_to "削除",post_path(@post), class:'btn btn-sm btn-danger', method: :delete, data: { confirm: '本当に削除しますか？' } %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
