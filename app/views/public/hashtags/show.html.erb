<% if @hashtag.present? %>
  <h1>Hashtag: <%= @hashtag.hashtag_name %>の一覧</h1>
<% else %>
  <h1>Hashtag not found</h1>
<% end %>
<ul>
  <% @posts.each do |post| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= link_to post.title, post_path(post.id) %></h5>
        <p class="card-text">
          投稿者：<%= link_to post.user.full_name, profile_users_path(post.user.id) %>
        </p>
        <p>Like:<%= post.favorites.count %>件<br>
          comments:<%= post.post_comments.count %>件</p>
      </div>
    </div>
  <% end %>
</ul>
<div class="text-center">
  <%= link_to "イベント一覧に戻る", events_path %>
</div>
