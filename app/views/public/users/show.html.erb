<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= render partial: 'public/users/shared/profile', locals: { user: @user }  %>
      <div class="card mb-3">
        <table>
          <tr>
            <th>Follows</th>
            <td>
              <%= link_to follows_users_path(@user) do %>
                <h6><%= @user.follower.count %></h6>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>Followers</th>
            <td>
              <%= link_to followers_users_path(@user) do %>
                <h6><%= @user.followed.count %></h6>
              <% end %>
            </td>
          </tr>
        </table>
        <!--ここからはボタンの記述-->
        <div class='row mb-4'>
          <% if current_user != @user %>
            <% if current_user.following?(@user) %>
              <%= link_to 'フォロー外す', relations_post_users_path(@user.id), method: :delete, class: "btn-sm btn-danger" %>
            <% else %>
              <%= link_to 'フォローする', relation_delete_users_path(@user.id), method: :post, class:"btn-sm btn-success" %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="row mb-2">
        <div class="table-responsive">
          <table class="table table-bordered">
            <tbody>
              <tr>
                <td><strong>投稿数:</strong></td>
                <td><%= "#{@my_postscount}" %></td>
              </tr>
              <tr>
                <td><strong>イベント作成数:</strong></td>
                <td><%= "#{@my_eventscount}" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-md-8  mt-5">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true">投稿一覧</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="events-tab" data-toggle="tab" href="#events" role="tab" aria-controls="events" aria-selected="false">作成イベント</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="likes-tab" data-toggle="tab" href="#likes" role="tab" aria-controls="likes" aria-selected="false">いいねした投稿</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
          <% if @my_posts.any? %>
            <% @my_posts.each do |post| %>
              <div class="card mb-3">
                <div class="card-body">
                  <h5 class="card-title"><%=link_to post.title, post_path(post.id) %></h5>
                  <p class="card-text"><%= post.body %></p>
                </div>
              </div>
            <% end %>
            <div class="pagination justify-content-center">
              <%= paginate @my_posts %>
            </div>
          <% else %>
            <p>投稿がありません</p>
          <% end %>
        </div>
        <div class="tab-pane fade" id="events" role="tabpanel" aria-labelledby="events-tab">
          <% if @my_events.any? %>
            <% @my_events.each do |event| %>
              <div class="card mb-3">
                <div class="card-body">
                  <h5 class="card-title"><%= event.event_name %></h5>
                  <p class="card-text">開催日：<%= event.date %></p>
                </div>
              </div>
            <% end %>
            <div class="pagination justify-content-center">
              <%= paginate @my_events %>
            </div>
          <% else %>
            <p>投稿がありません</p>
          <% end %>
        </div>
        <div class="tab-pane fade" id="likes" role="tabpanel" aria-labelledby="likes-tab">
          <% if @my_likes.any? %>
            <% @my_likes.each do |post| %>
              <div class="card mb-3">
                <div class="card-body">
                  <h5 class="card-title"><%=link_to post.title, post_path(post.id) %></h5>
                  <p class="card-text"><%=link_to post.user.full_name,profile_users_path(post.user.id) %></p>
                </div>
              </div>
            <% end %>
            <div class="pagination justify-content-center">
              <%= paginate @my_likes %>
            </div>
          <% else %>
            <p>いいねした投稿がありません</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
