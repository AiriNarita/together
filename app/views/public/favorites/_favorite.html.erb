<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorite_path(post), method: :DELETE, remote: true, class: "post-card__like post-card__like--active" do %>
    <i class="fa fa-heart"></i> <%= post.favorites.count %>
    Likes
  <% end %>
<% else %>
  <%= link_to post_favorite_path(post), method: :POST, remote: true, class: "post-card__like" do %>
    <i class="far fa-heart"></i> <%= post.favorites.count %> Likes
  <% end %>
<% end %>
