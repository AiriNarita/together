<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="mb-4">投稿詳細</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h4 class="mb-3"><%= @post.title %></h4>
      <p class="mb-3"><%= @post.body %></p>
      <%= link_to @post.user.first_name, my_page_users_path(@post.user.id) %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <% if @post.user_id == current_user.id %>
        <%= link_to "編集", edit_post_path(@post), class: 'btn btn-sm btn-success mr-3' %>
        <%= link_to "削除", post_path(@post), class:'btn btn-sm btn-danger', method: :delete, data: { confirm: '本当に削除しますか？' } %>
      <% end %>
    </div>
  </div>
</div>
