<div class="post-form container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with model: @post, local: true, url: post_path(@post) do |f| %>
        <%= render partial: 'public/posts/form', locals: { f: f, isEdit: true, post: @post } %>
      <% end %>
    </div>
  </div>
</div>
