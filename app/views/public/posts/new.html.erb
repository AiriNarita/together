<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="mt-3">Create</h2>
      <%= form_with model: Post do |f| %>
        <div class="form-group">
          <label for="post_title">
            <h3>Title</h3>
          </label>
          <%= f.text_field :title,required: true, class:'form-control post_title' %>
        </div>
        <div class="form-group">
          <%= f.text_area :body,required: true, rows: 25, cols: 10, class: "form-control" %>
        </div>
        <div class="form-group">
          <h5><%= f.label :hashtag_name %></h5>
          <%= f.text_field :hashtag_name,class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit '投稿する', name: 'commit' ,class: "btn btn-success"%>
          <%= f.submit '下書き保存', name: 'commit',class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
