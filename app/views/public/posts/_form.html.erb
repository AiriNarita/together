<div class="form-group form-group__title">
  <label for="post_title">
    Post name
  </label>
  <%= f.text_field :title, required: true, class: 'form-control post_title' %>
</div>
<div class="form-group form-group__body">
  <label for="post_body">
    Body
  </label>
  <%= f.text_area :body, required: true, rows: 25, cols: 10, class: "form-control " %>
</div>
<div class="form-group form-group__hash">
  <%= f.label :hashtag_name %>
  <% if defined?(isEdit) && isEdit == true %>
    <%= f.text_field :hashtag_name, value: post.hashtags.pluck(:hashtag_name).join(' '), class: "form-control" %>
  <% else %>
    <%= f.text_field :hashtag_name, class: "form-control" %>
  <% end %>
</div>
<div class="form-group form-group__thumbnail">
  <label for="post_thumbnail">
    Thumbnail
  </label>
  <div>
    <%= f.file_field :post_image, accept: "image/*" %>
  </div>
</div>
<div class="form-group form-group__button-wrapper">
  <% if @isDraft || post.new_record? || !post.draft? %>
    <%= f.submit '投稿する', name: 'commit', class: "btn form-group__submit" %>
    <% if @isDraft || post.new_record? %>
      <%= f.submit '下書き保存', name: 'commit', class: "btn form-group__draft" %>
    <% end %>
  <% else %>
    <%= f.submit '投稿する', name: 'commit', class: "btn form-group__submit" %>
  <% end %>
</div>
