<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= link_to '下書き一覧', drafts_posts_path, class: 'btn btn-primary btn-block mb-3' %>
      <%= link_to '新規作成', new_post_path, class: 'btn btn-success btn-block' %>
    </div>
    <div class="col-md-9">
      <h1>投稿一覧</h1>
      <div class="col-md-12">
        <% @posts.each do |post| %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= link_to post.title, post_path(post.id) %></h5>
              <p class="card-text">
                投稿者：<%= link_to post.user.full_name, my_page_users_path(post.user.id) %>
              </p>
              <p>Like:<%= post.favorites.count %>件<br>
                comments:<%= post.post_comments.count %>件</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
